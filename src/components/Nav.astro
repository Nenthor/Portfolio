---
import translations from '../locales/Nav';

interface Props {
  lang: 'en' | 'de';
}

const { lang } = Astro.props;
---

<nav>
  <a href="/">Nentwich</a>
  <div>
    <a href="#about">{translations.about[lang]}</a>
    <a href="#projects">{translations.projects[lang]}</a>
    <a href="#contact">{translations.contact[lang]}</a>
  </div>
</nav>

<style>
  nav {
    padding: 0 16px;
    width: calc(100% - 32px);
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 3em;
    text-transform: uppercase;
    font-weight: 900;
    font-size: 1.5rem;
    letter-spacing: 4px;
  }

  nav div {
    display: flex;
    gap: clamp(8px, 4vw, 64px);
  }

  nav a {
    position: relative;
    transition: all ease-in-out 0.3s;
    color: white;
  }

  .nav a:hover {
    transform: scale(1.05);
    color: var(--primary);
  }

  @media (max-width: 650px) {
    nav > a {
      display: none;
    }

    nav {
      justify-content: center;
      font-size: 1.2rem;
    }

    nav > div {
      justify-content: space-evenly;
    }

    nav > div > a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: calc(50% - 25.5px);
      width: 50px;
      height: 2px;
      background-color: var(--primary);
      border-radius: 5px;
    }
  }
</style>
