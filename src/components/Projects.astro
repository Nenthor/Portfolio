  },
].sort((p1, p2) => {
  return p2.priority - p1.priority;
});

function getLinkType(link: string) {
  if (link.includes('youtu.be') || link.includes('youtube')) return '/img/svg/link/youtube.svg';
  if (link.includes('github.com')) return '/img/svg/link/github.svg';
  return '/img/svg/link/globe.svg';
}
---

<div id="projects">
  <h2>{translations.title[lang]}</h2>
  <div class="box">
    {
      projects.map((project) => (
        <div class="project">
          <a href={project.links[0]} target="_blank" rel="noopener noreferrer">
            <img src={project.image} alt={project.title + ' Thumbnail'} loading="lazy" />
          </a>
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="links">
            {project.links.map((link) => (
              <a href={link} target="_blank" rel="noopener noreferrer">
                <img src={getLinkType(link)} alt="Link" loading="lazy" />
              </a>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #projects {
    background-color: var(--secondary);
    display: flex;
    align-items: center;
    flex-direction: column;
    padding: 64px 0;
  }

  h2 {
    position: relative;
    font-size: 3rem;
    text-transform: uppercase;
    font-weight: 800;
    letter-spacing: 2px;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 3px;
    background-color: var(--primary);
    border-radius: 5px;
  }

  .box {
    width: 90vw;
    max-width: 1600px;
    display: flex;
    align-items: stretch;
    justify-content: center;
    flex-wrap: wrap;
    gap: 32px;
    margin: 64px;
  }

  .project {
    display: flex;
    flex-direction: column;
    background-color: white;
    width: 500px;
    border-radius: 100px 100px 10px 10px;
    padding-bottom: 8px;
    box-shadow: 0 0 10px var(--secondary-dark);
  }

  .project > a {
    display: block;
    aspect-ratio: 16/9;
    width: 100%;
    border-radius: 10px 10px 0 0;
    overflow: hidden;
  }

  .project > a > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: all 0.3s ease-in-out;
  }

  .project > a > img:hover {
    transform: scale(1.1);
  }

  .project > h3 {
    text-align: center;
    color: black;
    margin: 0 16px;
    font-size: 1.3rem;
  }

  .project > p {
    text-align: justify;
    color: #666;
    margin: 0 16px;
    flex-grow: 1;
  }

  .project > div {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    margin: 16px 32px 8px 32px;
    gap: 32px;
  }

  .project > div > a {
    aspect-ratio: 1 / 1;
    width: 32px;
    transition: all ease-in-out 0.3s;
  }

  .project > div > a:hover {
    transform: scale(1.1);
  }

  .project > div img {
    vertical-align: middle;
    max-width: 100%;
  }
</style>
