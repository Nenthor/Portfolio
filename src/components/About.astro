<style>
  #about {
    background-color: var(--secondary-medium);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    flex-wrap: wrap;
    padding: 140px 0;
    gap: 42px;
  }

  .wave {
    --mask: radial-gradient(84px at 50% 117.5px, #000 99%, #0000 101%) calc(50% - 100px) 0/200px 51%
        repeat-x,
      radial-gradient(84px at 50% -67.5px, #0000 99%, #000 101%) 50% 50px/200px calc(51% - 50px)
        repeat-x,
      radial-gradient(84px at 50% calc(100% - 117.5px), #000 99%, #0000 101%) calc(50% - 100px) 100%/200px
        51% repeat-x,
      radial-gradient(84px at 50% calc(100% + 67.5px), #0000 99%, #000 101%) 50% calc(100% - 50px) /
        200px calc(51% - 50px) repeat-x;
    -webkit-mask: var(--mask);
    mask: var(--mask);
  }

  h2 {
    position: relative;
    font-size: 3rem;
    text-transform: uppercase;
    font-weight: 800;
    letter-spacing: 2px;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 3px;
    background-color: var(--primary);
    border-radius: 5px;
  }

  #about > p {
    width: 75vw;
    max-width: 1200px;
    text-align: justify;
    font-size: 1.1rem;
  }

  .cv {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    flex-direction: row;
    background-color: white;
    border-radius: 20px;
    padding: 8px 32px;
  }

  .cv:hover {
    background-color: var(--primary);
  }

  .cv:hover > p {
    color: white;
  }

  .cv > img {
    aspect-ratio: 1/1;
    height: 32px;
  }

  .cv > p {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--primary-dark);
  }

  .techbox {
    background-color: var(--secondary);
    padding: 32px;
    border-radius: 32px;
    display: flex;
    align-items: start;
    justify-content: center;
    flex-wrap: wrap;
    gap: 64px 128px;
    max-width: min(75vw, 1600px);
  }

  h3 {
    width: calc(100% - 16px);
    text-align: center;
    font-size: 2rem;
    margin: 32px 8px -32px 8px;
  }

  .techbox h4 {
    font-size: 1.4rem;
    text-align: center;
    margin-bottom: 16px;
  }

  @media (max-width: 650px) {
    #about > p {
      width: 90vw;
    }
  }
</style>
